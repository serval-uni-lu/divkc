BootStrap: docker
From: ubuntu:22.04

%files
    ./dDNNF.py         /dDNNF.py
    ./DIMACS.py        /DIMACS.py
    ./PartitionInfo.py /PartitionInfo.py
    ./sampler.py       /sampler.py

%post
    echo "setup start"
    apt-get -y update

    apt-get -y install tzdata
    apt-get -y install python3 python3-pycosat

%runscript
    # /wrap 64000 18000 /unigen/build/unigen "$@"
    /usr/bin/python3 /sampler.py "$@"
