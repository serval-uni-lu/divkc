BootStrap: docker
From: ubuntu:22.04

%files
    ./src /src
    ./CMakeLists.txt /CMakeLists.txt

%post
    echo "setup start"
    apt-get -y update
    apt-get -y install cmake make g++ libboost-dev libgmp-dev libboost-random-dev

    cd /
    mkdir build
    cd build
    cmake ..
    make -j8 pc

%runscript
    /build/pc "$@"
