BootStrap: docker
From: ubuntu:22.04

%files
    ./src /src
    ./Makefile /Makefile
    ../D4/wrapper /wrapper

%post
    echo "setup start"
    apt-get -y update
    apt-get -y install make g++ libboost-dev libgmp-dev libboost-random-dev

    cd /
    make -j8 appmc.r

    cd /wrapper
    make

%runscript
    /wrapper/wrap 64000 5400 /appmc.r "$@"
