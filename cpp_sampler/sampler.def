BootStrap: docker
From: ubuntu:22.04

%files
    ./ /sampler
    ../wrapper /wrapper

%post
    echo "setup start"
    apt-get -y update
    apt-get -y install make g++ libboost-dev libboost-random-dev libgmp-dev libgmpxx4ldbl

    cd sampler
    make clean
    make -j8

    cd /wrapper
    make clean
    make -j8

    ls
    echo "setup done"

%runscript
    /wrapper/wrap 64000 18000 /sampler/sampler "$@"
